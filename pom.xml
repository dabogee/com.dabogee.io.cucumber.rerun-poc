            <!--<checkBuildResult>true</checkBuildResult>-->
            <!--</configuration>-->
            <!--</execution>-->
            <!--</executions>-->
            <!--</plugin>-->
        </plugins>
    </build>

    <profiles>

        <profile>
            <id>cicd</id>
            <properties>
                <code.check.phase>none</code.check.phase>
            </properties>
        </profile>
    </profiles>

</project>
